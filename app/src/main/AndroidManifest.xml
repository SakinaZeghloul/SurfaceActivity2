        <receiver android:name="openclass.tp.nfa024.cnam.fr.surfaceactivity.Modèle.AlertReceiver">
            <intent-filter>
                <action android:name="ACTION_PROXIMITY_ALERT"/>
            </intent-filter>
        </receiver>

        <activity android:name=".Contrôleur.Accueil_nouveauJeu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            <activity android:name=".Contrôleur.GameBoussoleActivity"/>
            <activity android:name=".Contrôleur.Scanner"/>
        <activity android:name=".Contrôleur.Enigme"/>
        <activity android:name=".Contrôleur.MapActivity2"/>
